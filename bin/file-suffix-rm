#!/bin/bash

# Check if the correct number of arguments is provided
if [ "$#" -ne 1 ]; then
    echo "Usage: $0 <suffix>"
    exit 1
fi

# Set the directory path and suffix
directory="$(pwd)"
suffix="$1"

echo "Removing $suffix"

# Iterate through each file in the directory
for file in *; do
    # Check if the file name contains the specified suffix
    if [[ "$file" == *"$suffix"* ]]; then
        # Remove the specified suffix and keep the extension
        new_name=$(echo "$file" | sed "s/$suffix//")
        
        # Rename the file
        mv "$file" "$new_name"
        
        echo "Renamed: $file to $new_name"
    fi
done

